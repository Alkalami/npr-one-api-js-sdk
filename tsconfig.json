{
    "include": [
        "src/**/*"
    ],
	"exclude": [
        "src/**/*.spec.ts",
        "src/**/__mocks__/*.ts"
    ],
    "compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/node",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./dist",
		"target": "es5",
		"module": "commonjs",
        "moduleResolution": "node",
        "typeRoots": [
			"node_modules/@types"
		],
		"lib": [
            "dom",
			"esnext"
		],
        "allowJs": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"alwaysStrict": true,
		"removeComments": true
	}
}
