# http://editorconfig.org
root = true

[*]
indent_style = space
trim_trailing_whitespace = true
# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,mjs,ts,html}]
charset = utf-8

# 4 space indentation
[*.{js,mjs,ts,html,json}]
indent_style = space
indent_size = 4

# Matches the exact files either package.json, bower.json or .travis.yml
[{package.json,package-lock.json,bower.json,.travis.yml}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
